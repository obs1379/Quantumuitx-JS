// ä» QX ç¯å¢ƒä¸­è·å–èŠ‚ç‚¹åç§°ï¼ˆé¢æ¿ä¸­ä¼šè‡ªåŠ¨ä¼ å…¥ï¼‰
const nodeName = $environment.node || "å½“å‰èŠ‚ç‚¹";

// ä¸ºäº†é¿å…ç¼“å­˜ï¼Œç»™è¯·æ±‚ URL åŠ ä¸Šéšæœºå‚æ•°
const baseIPApi = "http://ip-api.com/json/";
const randomSuffix = "?_t=" + new Date().getTime();

// æ‹¼å‡ºæœ€ç»ˆæŸ¥è¯¢ IP åœ°ç†ä¿¡æ¯çš„ URL
const geoUrl = baseIPApi + randomSuffix;

// scamalytics ç½‘å€
const base_url = "https://scamalytics.com/ip/";

// å°è£… GET è¯·æ±‚ï¼ˆä½¿ç”¨ $task.fetchï¼‰
function httpGet(options, callback) {
  $task.fetch({
    url: options.url,
    method: "GET",
    // æŒ‡å®šå½“å‰èŠ‚ç‚¹ï¼Œä»¥ç¡®ä¿è¯·æ±‚èµ°è¢«æ£€æµ‹çš„èŠ‚ç‚¹
    node: nodeName
  }).then(
    (resp) => callback(null, resp, resp.body),
    (err) => callback(err.error, null, null)
  );
}

// ====== å¼€å§‹æ‰§è¡ŒæŸ¥è¯¢é€»è¾‘ ======
main();

function main() {
  httpGet({ url: geoUrl }, (error, response, data) => {
    if (error) {
      // æŸ¥è¯¢å¤±è´¥
      let message = wrapMessage("ğŸ”´ æŸ¥è¯¢è¶…æ—¶ / å¤±è´¥");
      $done({ title: "åœ°ç†ä½ç½®æŸ¥è¯¢", htmlMessage: message });
      return;
    }

    // è§£æ IP-API è¿”å›
    let ipObj;
    try {
      ipObj = JSON.parse(data);
    } catch (e) {
      let message = wrapMessage("ğŸ”´ JSON è§£æé”™è¯¯");
      $done({ title: "åœ°ç†ä½ç½®æŸ¥è¯¢", htmlMessage: message });
      return;
    }

    // å…ˆæ‹¼å‡ºåœ°ç†ä¿¡æ¯
    let message = json2info(ipObj);

    // ç»§ç»­æŸ¥ scamalytics
    const ip = ipObj.query; // è¿œç«¯IP
    const scamUrl = base_url + ip + randomSuffix;

    httpGet({ url: scamUrl }, (error2, resp2, scamData) => {
      if (error2) {
        let msg = wrapMessage("ğŸ”´ æŸ¥è¯¢è¶…æ—¶ / å¤±è´¥");
        $done({ title: "åœ°ç†ä½ç½®æŸ¥è¯¢", htmlMessage: msg });
        return;
      }

      // æ‹¼æ¥æ¬ºè¯ˆæŒ‡æ•°ä¿¡æ¯
      message += Display(scamData);
      message += "------------------------------</br>";
      message += `<font color=#6959CD><b>èŠ‚ç‚¹</b> âŸ ${nodeName}</font>`;

      // æ•´ä½“ç¾åŒ–
      message = `<p style="text-align: center; font-family: -apple-system; font-size: large; font-weight: thin">${message}</p>`;
      $done({ title: `${nodeName} åœ°ç†ä½ç½®æŸ¥è¯¢`, htmlMessage: message });
    });
  });
}

// =========== å·¥å…·å‡½æ•° ===========

// ç¾åŒ–é”™è¯¯æ¶ˆæ¯
function wrapMessage(msg) {
  return `<p style="text-align: center; font-family: -apple-system; font-size: large; font-weight: bold;">${msg}</p>`;
}

// ip-api è¿”å›çš„å…³é”®å­—æ®µ
const paras = ["query", "as", "org", "isp", "countryCode", "city", "lon", "lat"];
const paran = [
  "è¿œç«¯IPåœ°å€",
  "è¿œç«¯IP ASN",
  "ASNæ‰€å±æœºæ„",
  "è¿œç«¯ISP",
  "è¿œç«¯IPåœ°åŒº",
  "è¿œç«¯IPåŸå¸‚",
  "è¿œç«¯ç»åº¦",
  "è¿œç«¯çº¬åº¦"
];

// å¤„ç† IP-API è¿”å›çš„ JSON å¯¹è±¡
function json2info(obj) {
  let res = "-------------------------------";
  for (let i = 0; i < paras.length; i++) {
    if (obj[paras[i]]) {
      // å¦‚æœæ˜¯ countryCodeï¼Œå°±å¸¦ä¸Šå›½æ——
      if (paras[i] === "countryCode") {
        let cc = obj[paras[i]].toUpperCase();
        obj[paras[i]] = obj[paras[i]] + " âŸ¦" + (flags.get(cc) || "") + "âŸ§";
      }
      res += `</br><b><font color="">${paran[i]}</font> : </b><font color="">${obj[paras[i]]}</font></br>`;
    }
  }
  return res;
}

// ä» scamalytics é¡µé¢å†…å®¹ä¸­æå–æ¬ºè¯ˆæŒ‡æ•°å’Œé£é™©ç­‰çº§
function Display(content) {
  let score = getValue(content, `"score":`);
  let risk  = getValue(content, `"risk":`);

  let scoreMsg = `</br><b><font color="">æ¬ºè¯ˆæŒ‡æ•° </font> : </b><font color="">${score}</font></br>`;
  let riskMsg  = `</br><b><font color="">é£é™©ç­‰çº§ </font> : </b><font color="">${E2C(risk)}</font></br>`;
  return scoreMsg + riskMsg;
}

// ä»æ–‡æœ¬é‡Œæ ¹æ® key å–å€¼
function getValue(str, key) {
  let idx = str.indexOf(key);
  if (idx === -1) return "NA";
  let sub = str.substring(idx + key.length);
  // æŒ‰æ¢è¡Œåˆ†å‰²
  sub = sub.split("\n")[0];
  // å»é™¤ " æˆ– ,
  return sub.replace(/"|,/g, "").trim();
}

// è½¬æ¢è‹±æ–‡é£é™©ç­‰çº§
function E2C(level) {
  if (level.includes("very high")) return "æé«˜é£é™© ğŸ”´";
  if (level.includes("high"))      return "é«˜é£é™© âš ï¸";
  if (level.includes("medium"))    return "ä¸­é£é™© ğŸŸ¡";
  if (level.includes("low"))       return "ä½é£é™© âœ…";
  return "NA";
}

